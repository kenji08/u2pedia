%ul.wiki_page_actions
  - if history_allowed?
    %li= link_to wt('History'), wiki_page_history_path(@page)
  - if edit_allowed?
    %li= link_to wt('Edit'), wiki_page_edit_path(@page)
  - if destroy_allowed?
    %li= link_to wt('Destroy'), wiki_page_path(@page), :method => :delete, :confirm => wt("Destroy Confirm")
